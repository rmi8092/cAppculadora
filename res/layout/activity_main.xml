<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:weightSum="1">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="3">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:id="@+id/displayPeq"
                android:textSize="40sp"
                android:gravity="top|right"
                android:singleLine="false"
                android:layout_weight="0.7"
                android:textColor="#5a5959" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:id="@+id/display"
                android:textSize="80sp"
                android:gravity="bottom|right"
                android:singleLine="false"
                android:layout_weight="0.3"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:weightSum="5">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:weightSum="4">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="C"
                    android:id="@+id/btnBorrar"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:layout_weight="1"
                    android:background="@drawable/botones_especiales" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="+/-"
                    android:id="@+id/btnCambioSigno"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:background="@drawable/botones_especiales" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="%"
                    android:id="@+id/btnPorcentaje"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:background="@drawable/botones_especiales" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="/"
                    android:id="@+id/btnDividir"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:background="@drawable/botones_operaciones" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:weightSum="4">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="7"
                    android:id="@+id/btnSiete"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:background="@drawable/botones_numeros" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="8"
                    android:id="@+id/btnOcho"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:background="@drawable/botones_numeros" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="9"
                    android:id="@+id/btnNueve"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:background="@drawable/botones_numeros" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="x"
                    android:id="@+id/btnProducto"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:layout_weight="1"
                    android:background="@drawable/botones_operaciones" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:weightSum="4">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="4"
                    android:id="@+id/btnCuatro"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:background="@drawable/botones_numeros" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="5"
                    android:id="@+id/btnCinco"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:background="@drawable/botones_numeros" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="6"
                    android:id="@+id/btnSeis"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:background="@drawable/botones_numeros" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="-"
                    android:id="@+id/btnRestar"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:background="@drawable/botones_operaciones" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:weightSum="4">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="1"
                    android:id="@+id/btnUno"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:background="@drawable/botones_numeros" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="2"
                    android:id="@+id/btnDos"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:background="@drawable/botones_numeros" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="3"
                    android:id="@+id/btnTres"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:background="@drawable/botones_numeros" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="+"
                    android:id="@+id/btnSumar"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:background="@drawable/botones_operaciones" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:weightSum="4">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="0"
                    android:id="@+id/btnCero"
                    android:layout_weight="2"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:background="@drawable/botones_numeros" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="."
                    android:id="@+id/btnDecimal"
                    android:layout_weight="1"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:background="@drawable/botones_numeros"
                    android:allowUndo="false" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="="
                    android:id="@+id/btnResultado"
                    android:layout_weight="1"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:background="@drawable/botones_operaciones" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
